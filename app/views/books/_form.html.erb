<%= form_for @book do |f| %>
  <div class="field">
    <%= f.label "title" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label "Description" %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label "Author" %>
    <%= f.text_field :author %>
  </div>



  <%= f.submit "Add" %>
<% end  %>
